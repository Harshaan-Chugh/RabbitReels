# RabbitReels Environment Configuration
# Copy this file to .env and fill in your actual values

ENVIRONMENT=production

REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_secure_redis_password

RABBIT_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=false

FRONTEND_URL=https://rabbitreels.us

JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-chars
SESSION_SECRET=your-super-secure-session-secret-key-here-minimum-32-chars

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_AUTH_REDIRECT=https://rabbitreels.us/auth/callback

STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

OPENAI_API_KEY=sk-your-openai-api-key

ELEVEN_API_KEY=your-elevenlabs-api-key
PETER_VOICE_ID=your-peter-voice-id
STEWIE_VOICE_ID=your-stewie-voice-id
RICK_VOICE_ID=your-rick-voice-id
MORTY_VOICE_ID=your-morty-voice-id

VIDEO_OUT_DIR=./data/videos
ENABLE_PUBLISHER=false

YOUTUBE_CLIENT_SECRETS=path/to/credentials.json
YOUTUBE_TOKEN=path/to/youtube-token.json

POSTGRES_DB=rabbitreels
POSTGRES_USER=rabbitreels
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://rabbitreels:your_secure_postgres_password@postgres:5432/rabbitreels

NEXT_PUBLIC_API_BASE=https://rabbitreels.us/api

# Development Overrides (for local development)
# Uncomment and modify these for local development
# DATABASE_URL=postgresql://rabbitreels:password@localhost:5432/rabbitreels
# REDIS_URL=redis://localhost:6379/0
# FRONTEND_URL=http://localhost:3000
# NEXT_PUBLIC_API_BASE=http://localhost:8080/api
# GOOGLE_AUTH_REDIRECT=http://localhost:3000/auth/callback 
